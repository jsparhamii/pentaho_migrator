# Databricks AI Configuration
DATABRICKS_TOKEN=your_databricks_token_here
AI_BASE_URL=https://your-databricks-workspace.databricks.net/serving-endpoints/your-endpoint/invocations
AI_MODEL=databricks-claude-opus-4-1
AI_PROVIDER=databricks

# Databricks Workspace Configuration (for Lakebase integration)
DATABRICKS_WORKSPACE_URL=https://your-databricks-workspace.databricks.net

# PostgreSQL Database Configuration - Databricks PostgreSQL
DB_HOST=instance-xxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx.database.azuredatabricks.net
DB_PORT=5432
DB_NAME=databricks_postgres
DB_USER=your.email@databricks.com
DB_PASSWORD=your_databricks_postgres_password_here
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL_MODE=require

# Alternative: Local PostgreSQL Configuration (for development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pentaho_migration
# DB_USER=postgres
# DB_PASSWORD=your_local_password_here

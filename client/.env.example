# Client Environment Configuration Template
# Copy this file to .env in the client directory
# NEVER commit .env files to version control!

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Vite development server port
# VITE_PORT=3000

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL (adjust if backend runs on different port)
VITE_API_URL=http://localhost:3001

# ===========================================
# OPTIONAL CLIENT SETTINGS
# ===========================================

# Enable development tools
# VITE_DEV_TOOLS=true

# API timeout in milliseconds
# VITE_API_TIMEOUT=30000

# Maximum file upload size (must match server setting)
# VITE_MAX_UPLOAD_SIZE=50

# Enable debug logging in browser console
# VITE_DEBUG=false
